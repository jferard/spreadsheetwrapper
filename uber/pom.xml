			<artifactId>spreadsheetwrapper-jopendocument1.3</artifactId>
			<version>${project.parent.version}</version>
		</dependency>

		<dependency>
			<groupId>${project.parent.groupId}</groupId>
			<artifactId>spreadsheetwrapper-jxl</artifactId>
