			<version>${project.parent.version}</version>
		</dependency>
		<dependency>
			<groupId>${project.parent.groupId}</groupId>
			<artifactId>spreadsheetwrapper-simpleodf</artifactId>
			<version>${project.parent.version}</version>
		</dependency>

		<dependency>
